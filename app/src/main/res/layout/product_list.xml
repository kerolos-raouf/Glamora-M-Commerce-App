<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:id="@+id/item"
        app:cardUseCompatPadding="true"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/productlist_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/productlist_image_cardview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    tools:src="@drawable/product" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/productlist_itemName_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/itemName"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/productlist_itemPrice_cardview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/productlist_cardview"
                app:layout_constraintTop_toTopOf="@+id/productlist_cardview"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/productlist_itemPrice_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/price"
                android:textSize="18sp"
                android:textColor="@color/light_blue"
                app:layout_constraintBottom_toBottomOf="@+id/productlist_cardview"
                app:layout_constraintStart_toStartOf="@id/productlist_itemName_tv"
                app:layout_constraintTop_toBottomOf="@+id/productlist_itemName_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>
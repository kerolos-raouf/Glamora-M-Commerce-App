<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_brand_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/brand_cardview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            android:background="@android:color/transparent"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/image_brand_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/brand"
                android:background="@android:color/transparent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textview_brandName_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/brandname"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/brand_cardview"
            app:layout_constraintStart_toStartOf="@+id/brand_cardview"
            app:layout_constraintTop_toBottomOf="@+id/brand_cardview" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

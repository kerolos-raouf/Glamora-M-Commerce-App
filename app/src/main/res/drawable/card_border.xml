<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color of the card -->
            <corners android:radius="5dp" /> <!-- Set corner radius -->
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Make the inner background transparent -->
            <stroke
                android:width="1dp"
            android:color="@color/light_gray" /> <!-- Border color -->
            <corners android:radius="5dp" /> <!-- Set the same corner radius as above -->
        </shape>
    </item>
</layer-list>
